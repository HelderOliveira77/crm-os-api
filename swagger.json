{
    "openapi": "3.0.0",
    "info": {
      "title": "API de Gestão de Ordens de Serviço (CRM-OS)",
      "version": "1.0.0",
      "description": "Endpoints para criação, leitura, atualização e eliminação de Ordens de Serviço."
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "paths": {
      "/auth/register": {
    "post": {
      "summary": "Registar Novo Utilizador",
      "tags": ["Auth"],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string", "example": "tecnico1" },
                "password": { "type": "string", "example": "SenhaSegura123" },
                "role": { "type": "string", "enum": ["Admin", "Technician", "Viewer"], "example": "Technician" }
              }
            }
          }
        }
      },
      "responses": {
        "201": { "description": "Utilizador registado com sucesso." }
      }
    }
  },
  "/auth/login": {
    "post": {
      "summary": "Login do Utilizador",
      "tags": ["Auth"],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string", "example": "tecnico1" },
                "password": { "type": "string", "example": "SenhaSegura123" }
              }
            }
          }
        }
      },
      "responses": {
        "200": { 
          "description": "Login bem-sucedido, retorna JWT.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" },
                  "user": { "type": "object" }
                }
              }
            }
          }
        },
        "401": { "description": "Credenciais Inválidas." }
      }
    }
  },


      "/orders": {
        "get": {
          "summary": "Listar todas as Ordens de Serviço",
          "responses": { "200": { "description": "Lista de ordens de serviço." } }
        },
        "post": {
          "summary": "Criar nova Ordem de Serviço",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string", "example": "Instalação de Novo Servidor" },
                    "description": { "type": "string", "example": "Configuração inicial de hardware e software." },
                    "priority": { "type": "string", "example": "Média" }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Ordem de Serviço criada com sucesso."
            }
          }
        }
      },
      "/orders/{id}": {
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "get": { 
          "summary": "Buscar OS por ID", 
          "responses": { "200": { "description": "Detalhes da OS." } }, 
          "tags": [ "Orders" ] 
        },
        "put": { 
          "summary": "Atualizar OS por ID", 
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string", "example": "Instalação de Novo Servidor" },
                    "description": { "type": "string", "example": "Configuração inicial de hardware e software." },
                    "priority": { "type": "string", "example": "Alta" },
                    "status": { "type": "string", "example": "Concluída" } 
                  }
                }
              }
            }
          },
          "responses": { 
            "200": { "description": "OS atualizada." } 
          }, 
          "tags": [ "Orders" ] 
        },
        "delete": { 
          "summary": "Eliminar OS por ID", 
          "responses": { "204": { "description": "OS eliminada." } }, 
          "tags": [ "Orders" ] 
        }
      }
    }
  }